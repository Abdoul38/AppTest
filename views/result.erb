<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Highlighted content</title>
    <style>
    
    .highlight:hover::before {
      background-color: #d48fc5;
      color: #fff;
    }
      }
    </style>
  </head>
  <body>
  <h1>Highlighted content</h1>
  <div>
  <%= @highlighted_text %>
</div>

<!-- Code pour afficher les infobulles -->
<script>
  var highlightedElements = document.querySelectorAll('.highlight');
  highlightedElements.forEach(function(element) {
    element.addEventListener('mouseover', function() {
      var tooltip = this.getAttribute('data');
      var tooltipElement = document.createElement('div');
      tooltipElement.classList.add('tooltip');
      tooltipElement.innerHTML = tooltip;
      document.body.appendChild(tooltipElement);
      
      var rect = this.getBoundingClientRect();
      var tooltipRect = tooltipElement.getBoundingClientRect();
      tooltipElement.style.top = rect.top - tooltipRect.height + 'px';
      tooltipElement.style.left = rect.left + (rect.width - tooltipRect.width) / 2 + 'px';
    });
    
    element.addEventListener('mouseout', function() {
      var tooltip = document.querySelector('.tooltip');
      if (tooltip) {
        tooltip.remove();
      }
    });
  });
</script>

<style>
div {
  border: 1px solid black;
  border-width: 1px 2px 3px 4px; /* haut, droite, bas, gauche */
  padding: 10px;
  width:500px;
  margin-left: 300px;
}
h1{
  margin-left: 300px;
}

  .highlight {
    background-color: #d48fc5;
    cursor: pointer;
  }
  .highlight1 {
    background-color: #9bd8ee;
    cursor: pointer;
  }
  
  .tooltip {
    position: absolute;
    background-color: #d48fc5;
    color: #fff;
    
  }
</style>

  </body>
</html>
